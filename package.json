{
  "name": "vscode-bvh-preview",
  "displayName": "vscode-bvh-preview",
  "description": "VS Code BVH Preview",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "bvh",
    "viewer",
    "vscode"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": true
      }
    },
    "customEditors": [
      {
        "viewType": "bvhpreview.viewer",
        "displayName": "BVH Viewer Light",
        "selector": [
          {
            "filenamePattern": "*.bvh"
          }
        ]
      }
    ],
    "configuration": {
      "title": "VSCode BVH Preview",
      "properties": {
        "bvhpreview.booleanOption": {
          "type": "boolean",
          "default": false,
          "description": "boolean option"
        },
        "bvhpreview.stringOption": {
          "type": "string",
          "default": "#0000ff",
          "description": "string option"
        },
        "bvhpreview.numberOption": {
          "type": "number",
          "default": 0,
          "description": "number option"
        },
        "bvhpreview.backgroundColor": {
          "type": "string",
          "default": "#121212",
          "description": "Default background color."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "three": "^0.162.0",
    "typescript": "^5.3.3"
  }
}
